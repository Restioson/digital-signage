{% extends "base.j2" %}

{% block title %}Add a lecturer{% endblock %}
{% block head %}
  {{ super() }}
  {{ css('config/department/lecturer') }}
{% endblock %}

{% block content %}
  <script type="module">
    import { main } from "{{ url_for('static', filename='config.mjs') }}";
    main();
  </script>

  <form action="/api/lecturers" method="post" class="post-form">
    <label
      >Name:
      <input type="text" id="name" name="name" required />
    </label>

    <label
      >Title:
      <select id="title" name="title" required>
        <option value="Mr">Mr</option>
        <option value="Mrs">Mrs</option>
        <option value="Ms">Ms</option>
        <option value="Mx">Mx</option>
        <option value="Prof">Professor</option>
        <option value="A/Prof">Associate Professor</option>
        <option value="Dr">Dr</option>
      </select>
    </label>

    <label
      >Position:
      <input type="text" id="position" name="position" required />
    </label>

    <label
      >Office Location:
      <input type="text" id="office_location" name="office_location" />
    </label>

    <label
      >Email Address:
      <input type="email" id="email" name="email" required />
    </label>

    <label
      >Telephone Number:
      <input type="tel" id="phone" name="phone" required />
    </label>

    <label
      >Office Hours:
      <input type="text" id="office_hours" name="office_hours" required />
    </label>

    <label
      >Department:
      <select id="department" name="department">
        <option value="Computer Science">Computer Science</option>
        <option value="Mathematics">Mathematics</option>
        <option value="Chemistry">Chemistry</option>
      </select>
    </label>

    <button type="submit">Submit</button>
    <p hidden class="post-status-message"></p>
  </form>
{% endblock %}
