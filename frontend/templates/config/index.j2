{% extends "base.j2" %}

{% block title %}Config{% endblock %}
{% block head %}
  {{ super() }}
  {{ css('config') }}
{% endblock %}

{% block content %}
  <script type="module">
    import { main } from "{{ url_for('static', filename='config.mjs') }}";
    main();
  </script>
  <div class="column-list">
    <form action="/api/content" method="post" class="post-form">
      <h3>Post text</h3>
      <input type="hidden" id="text_post_type" name="type" value="text" />

      <label for="title">Title:</label>
      <input id="title" name="title" type="text" />

      <label for="body">Body:</label>
      <input id="body" name="body" type="text" />

      <button type="submit">Submit</button>
      <p hidden class="post-status-message"></p>
    </form>

    <form
      action="/api/content"
      method="post"
      enctype="multipart/form-data"
      class="post-form"
    >
      <h3>Post an image</h3>
      <input
        type="hidden"
        id="local_image_post_type"
        name="type"
        value="local_image"
      />
      <label for="image_data">Attach file:</label>
      <input type="file" id="image_data" name="image_data" />

      <label
        >Caption title:
        <input type="text" name="caption_title" />
      </label>

      <label
        >Caption body:
        <input type="text" name="caption_body" />
      </label>

      <button type="submit">Submit</button>
      <p hidden class="post-status-message"></p>
    </form>

    <form action="/api/content" method="post" class="post-form">
      <h3>Post an image</h3>
      <input
        type="hidden"
        id="remote_image_post_type"
        name="type"
        value="remote_image"
      />
      <label for="remote_image_url">Url:</label>
      <input type="url" id="remote_image_url" name="src" />

      <label
        >Caption title:
        <input type="text" name="caption_title" />
      </label>

      <label
        >Caption body:
        <input type="text" name="caption_body" />
      </label>

      <button type="submit">Submit</button>
      <p hidden class="post-status-message"></p>
    </form>

    <form action="/api/content" method="post" class="post-form">
      <h3>Post a link</h3>
      <input type="hidden" id="link_type" name="type" value="link" />
      <label for="link_url">Url:</label>
      <input type="url" id="link_url" name="url" />

      <label
        >Caption title:
        <input type="text" name="caption_title" />
      </label>

      <label
        >Caption body:
        <input type="text" name="caption_body" />
      </label>

      <button type="submit">Submit</button>
      <p hidden class="post-status-message"></p>
    </form>

    <form action="/api/lecturer" method="post">
      <label for="name">Name:</label>
      <input id="name" name="name" type="text" />
      <label for="department">Department:</label>
      <input id="department" name="department" type="text" />
      <label for="lecturer_title">Title of lecturer:</label>
      <select id="lecturer_title" name="title">
        <option value="Mr">Mr</option>
        <option value="Mrs">Mrs</option>
        <option value="Ms">Ms</option>
      </select>
      <label for="position">Position:</label>
      <input id="position" name="position" type="text" />

      <label for="office_hours">Office hours:</label>
      <input id="office_hours" name="office_hours" type="text" />

      <label for="office_location">Office location:</label>
      <input id="office_location" name="office_location" type="text" />

      <label for="email">Email Address:</label>
      <input id="email" name="email" type="text" />

      <label for="phone">Telephone number:</label>
      <input id="phone" name="phone" type="text" />

      <button type="submit">Submit</button>
    </form>
  </div>
{% endblock %}
