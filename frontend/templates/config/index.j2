{% extends "base.j2" %}

{% block title %}Config{% endblock %}
{% block head %}
  {{ super() }}
  {{ css('config') }}
{% endblock %}

{% block content %}
  <script type="module">
    import { main } from "{{ url_for('static', filename='config.mjs') }}";
    main();
  </script>

  <form action="/api/content" method="post" class="post-form">
    <label for="type">Type of content:</label>
    <select id="type" name="type">
      <option value="text">Text</option>
    </select>

    <label for="title">Title:</label>
    <input id="title" name="title" type="text" />

    <label for="body">Body:</label>
    <input id="body" name="body" type="text" />

    <button type="submit">Submit</button>

    <p hidden class="post-status-message"></p>
  </form>
{% endblock %}
