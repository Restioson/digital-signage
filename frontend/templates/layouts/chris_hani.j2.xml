<container>
  {# - broken with the template literals #}
  <!-- prettier-ignore -->
  <style>
    :root {
      --bg-content-url: url({{ bg_content_url|safe }});
      --bg-loadshedding-url: url({{ bg_loadshedding_url|safe }});
    }

    html {
      font-size: {{ font_size }};
    }

    .scaled-iframe {
      --scale: {{ calendar_scale }};
    }
  </style>

  <style>
    .page {
      height: 100vh;
      width: 100vw;
      padding-left: 25px;
      padding-right: 25px;
      padding-bottom: 5px;
    }

    #main-page {
      background: var(--bg-content-url) no-repeat center center fixed;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
      display: grid;
      grid-template-rows: auto 1fr 1fr auto;
      grid-gap: 1em;
    }

    #main-page > * {
      min-height: 0;
      min-width: 0;
    }

    #header-text {
      text-align: right;
      color: blue;
      font-size: 4rem;
    }

    #calendar-container {
      display: flex;
      flex-direction: row;
    }

    #calendar-container .clock {
      text-align: left;
      font-weight: bold;
      font-size: 3rem;
    }

    #calendar-container .clock .month {
      margin-left: 5px;
      font-size: 0.9em;
      color: purple;
    }

    #calendar-container .clock .day {
      font-size: 0.8em;
      color: purple;
    }

    #calendar-container > *:last-child {
      flex: 1;
    }

    #time-clock {
      text-align: left;
      font-weight: bold;
      font-size: 4rem;
      color: black;
      -webkit-text-fill-color: white;
      -webkit-text-stroke-width: 1px;
      -webkit-text-stroke-color: black;
    }

    #stream {
      flex-grow: 2;
    }

    #loadshedding-page {
      background: var(--bg-loadshedding-url) no-repeat center center fixed;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
      color: white;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .loadshedding {
      border: 0;
      font-size: 2.5rem;
    }
  </style>

  <rotation secs-per-page="{{ page_secs }}">
    <container html:id="main-page" html:class="page">
      <html html:id="header-text">
        {{ room_name }}
      </html>

      <container html:id="calendar-container">
        <clock format="{{ date_format|safe }}" />
        <container>
          <refresh>
            <html html:id="calendar" html:class="scaled-iframe">
              {{ calendar_iframe|safe }}
            </html>
          </refresh>
        </container>
      </container>

      <container html:id="stream">
        <content-stream
          fetch-amount="{{ fetch_amount }}"
          secs-per-page="{{ content_rotation_secs }}"
          page-size="{{ page_size }}"
        >
          {% for stream in streams %}
            <stream id="{{ stream }}" />
          {% endfor %}
        </content-stream>
      </container>

      <clock html:id="time-clock" format="{{ time_format|safe }}" />
    </container>

    <container html:id="loadshedding-page" html:class="page">
      <loadshedding />
    </container>

    {%- for page in custom_pages -%}
      <html html:class="custom-page page-{{ loop.index }}">
        {{ page|safe }}
      </html>
    {%- endfor -%}
  </rotation>
</container>
