<template on-show="refresh">
  <name>YouTube Video</name>
  <properties>
    <property>
      <name>Video to display</name>
      <variable>yt_link</variable>
      <type>url</type>
      <default
        ><![CDATA[https://youtu.be/KHrUslXGE5M?si=qzM7vjk3HaeBonVh]]></default
      >
    </property>
  </properties>

  <page>
    <style>
      iframe {
        width: 100%;
        height: 100%;
      }
    </style>

    <html>
      {% set code = yt_link|youtube_code|urlencode %}
      <iframe
        src="https://www.youtube.com/embed/{{ code }}?&amp;playlist={{ code }}&amp;controls=0&amp;loop=1&amp;autoplay=1&amp;mute=1"
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        allowfullscreen
      />
    </html>
  </page>
</template>
