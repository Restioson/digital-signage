<container>
  <clock format="{{ clock_format }}" />
  <loadshedding />
  <rotation secs-per-page="{{ secs_per_page }}">
    <department />
    <content-stream
      fetch-amount="{{ fetch_amount }}"
      secs-per-page="{{ content_rotation_secs }}"
      page-size="{{ page_size }}"
    >
      {% for stream in streams %}
        <stream id="{{ stream }}" />
      {% endfor %}
    </content-stream>
  </rotation>
</container>
